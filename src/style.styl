* {
  margin: 0;
  padding: 0;
}

html, body {
  height: 100%;
}

#container {
  background-image: url('img/paintedplains.jpg');
  background-size: cover;
  height: 100%;
  width: 100%;
}

#handCardContainer .card .count {
  display: none;
}

.card {
  background-repeat: no-repeat;
  background-size: cover;
  border-bottom: 0;
  display: inline-block;
  height: 160px;
  margin: 0 10px 10px 10px;
  width: 100px;

  .count {
    background-color: rgb(127, 146, 186);
    border: 1px solid rgb(94, 129, 239);
    border-radius: 100%;
    bottom: -133px;
    color: rgb(44, 44, 44);
    display: inline-block;
    float: right;
    margin: 2px;
    padding: 2px;
    position: relative;
    right: 0;
  }

  &.mini {
    height: 86px;
    border-bottom: 3px solid black;
  }
  
